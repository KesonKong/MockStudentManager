@model HomeDetailsViewModel
@{
    ViewBag.Title = "学生详情页面";

    var photoPath = "~/images/" + (Model.student.PhotoPath ?? "timg.jpg");
}

    <div class="row justify-content-center m-3">
        <div class="col-sm-8">
            <div class="card">
                <div class="card-header">
                    <h1>@Model.student.Name</h1>
                </div>
                <div class="card-body text-center">
            
                <img class="card-img-top" src="@photoPath" asp-append-version="true" />
                    <h4>学生id:@Model.student.Id</h4>
                    <h4>学生邮箱:@Model.student.Email</h4>
                    <h4>学生班级:@Model.student.ClassName</h4>
                </div>
                <div class="card-body text-center">
                    <a asp-controller="home" class="btn btn-primary" asp-action="index">返回</a>
                    <a class="btn btn-primary" asp-action="edit" asp-route-id="@Model.student.Id" asp-route-name="aa">编辑</a>
                    <a class="btn btn-danger">删除</a>
                </div>
            </div>
        </div>
    </div>

