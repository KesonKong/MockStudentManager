@model List<RolesInUserViewModel>
@{
    ViewBag.Title = "管理用户中的角色";
    var userId = ViewBag.userId;
}


<form method="post" asp-action="ManageUserRoles" asp-route-userId="@userId">
    <div class="card mt-3">
        <div class="card-header"><h3>管理用户中的角色</h3></div>
        <div class="card-body">
            @if (Model.Any())
            {
                for (int i = 0; i < Model.Count; i++)
                {

                    <div class="custom-control custom-checkbox">
                        <input asp-for="@Model[i].IsSelected" class="custom-control-input" />
                        <label class="custom-control-label" asp-for="@Model[i].IsSelected">@Model[i].RoleName</label>
                        <input asp-for="@Model[i].RoleId" type="hidden" />
                        <input asp-for="@Model[i].RoleName" type="hidden" />
                    </div>
                }
            }
            else
            {
                <h5 class="card-title">目前没有信息</h5>
            }
        </div>
        <div class="card-foot">

            <button type="submit" class=" btn btn-primary">更新</button>
            <a class=" btn btn-primary" asp-action="EditUser" asp-route-id="@userId">取消</a>
        </div>
    </div>

</form>