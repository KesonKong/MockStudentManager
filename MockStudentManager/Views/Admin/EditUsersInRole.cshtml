@model List<UserRoleViewModel>
@{
    ViewBag.Title = "在角色中添加或删除用户";
    var roleId = ViewBag.roleId;
}


<form method="post" asp-action="EditUsersInRole" asp-route-roleId="@roleId">
    <div class="card mt-3">
        <div class="card-header"><h3>在角色中添加货删除用户</h3></div>
        <div class="card-body">
            @if (Model.Any())
            {
                for (int i = 0; i < Model.Count; i++)
                {
                    <div class="form-check m1">

                        <input asp-for="@Model[i].IsSelected" class="form-check-input" />
                        <label class="form-check-label" asp-for="@Model[i].IsSelected">@Model[i].UserName</label>
                        <input asp-for="@Model[i].UserId" type="hidden" />
                        <input asp-for="@Model[i].UserName" type="hidden" />
                    </div>
                }
            }
            else
            {
                <h5 class="card-title">目前没有信息</h5>
            }
        </div>
        <div class="card-foot">

            <button type="submit" class=" btn btn-primary">更新</button>
            <a class=" btn btn-primary" asp-action="EditRole" asp-route-id="@roleId">取消</a>
        </div>
    </div>

</form>